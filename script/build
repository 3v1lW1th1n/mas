#!/bin/bash -e

main() {
  script/clean
  build

  # If this is a tagged build we are going to release
  if [[ ! -z $TRAVIS_TAG ]]; then
    archive
  fi
}

build() {
  set -o pipefail && \
      xcodebuild -project "mas-cli.xcodeproj" \
          -scheme mas-cli \
          -configuration Release \
          clean build \
      | xcpretty -c
}

archive() {
  set -o pipefail && \
      xcodebuild -project "mas-cli.xcodeproj" \
          -scheme mas-cli \
          -archivePath mas.xcarchive \
          archive \
      | xcpretty -c
}

main
